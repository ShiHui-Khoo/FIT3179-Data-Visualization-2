{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":310,
    "height": 427,
    "background": "#F2F4F4",
    "data": {"url": "https://raw.githubusercontent.com/ShiHui-Khoo/FIT3179_Data_Visualization_2/main/FIT3179_Visualization_Project_2/data/continent_econs.csv"},
    "title": "Government Size & Economic Freedom",
    
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": true
        },
        "encoding": {
          "x": {
            "field": "1_size_government",
            "type": "quantitative",
            "title": "Government Size"
          },
          "y": {
            "field": "ECONOMIC FREEDOM",
            "type": "quantitative",
            "scale": {"domain": [0, 10]},
            "title": "Economic Freedom"
          },
          "size": {"value": 60}
        }
      }
      
    ],
    "params": [
      {
        "name": "Economic_Score_Selection",
        "value": 8.97,
        "bind": {
          "input": "range",
          "min": 2.88,
          "max": 8.97,
          "step": 0.01,
          "name": "Economic Freedom: "
        }
      },
      {
        "name": "Continent_Selection",
        "bind": {
            "input": "select",
            "options": [
                null,
                "Africa",
                "Arab States",
                "Asia & Pacific",
                "Europe",
                "Middle East",
                "North America",
                "South/Latin America"
            ],
            "labels": [
                "Show All",
                "Africa",
                "Arab States",
                "Asia & Pacific",
                "Europe",
                "Middle East",
                "North America",
                "South/Latin America"
            ],
            "name": "Continent Selection: "
        }
    }
    ],
    "transform":[
      {"filter": "datum['ECONOMIC FREEDOM'] <= Economic_Score_Selection"},
      {"filter": "Continent_Selection == null || Continent_Selection == datum.continent"},
      {"filter": "datum['ECONOMIC FREEDOM'] > 0"}
    ],
    "encoding": {
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "rank", "type": "quantitative", "title": "Rank"},
        {"field": "ECONOMIC FREEDOM", "type": "quantitative", "title": "Economic Freedom"},
        {"field": "1_size_government", "type": "quantitative", "title": "Government Size", "format": ".2f"}
      ]
    } 
  }
  